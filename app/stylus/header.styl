@import 'components/font'
@import 'components/color'

header
  .mp-logo
    width: 40px
  .topline
    font-size: .75em
  .date
    color: $black
  .kicker
    color: $grey
    padding-left: 10px
    text-transform: uppercase
    letter-spacing: .05em
  .title
    font-weight: normal
    font-family: $serif
    font-size: 2.5em
    margin: .5em 0
  .subline
    font-family: $sans
    font-weight: normal
    font-size: 1em
    margin: 0
  .social
    float: right
    >*
      float: left
      display: block
    a
      color: $black
      text-decoration: none
      border: none
      padding-left: 10px
    i
      font-size: 17px
    .fb-button i
      color: $facebook
    .tw-button i
      color: $twitter
  .fb-iframe
    width: 80px